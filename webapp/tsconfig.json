{
  "compilerOptions": {
    "target": "es5",                      // Compatible with older browsers (optional)
    "lib": ["dom", "esnext"],              // Enable modern JavaScript features
    "jsx": "react-jsx",                    // For React 17 and later (react-jsx is for React 18+)
    "module": "esnext",                    // Module system to use (ES modules)
    "moduleResolution": "node",            // Helps resolve module imports like Node.js
    "strict": true,                        // Enable strict type-checking
    "esModuleInterop": true,               // Allows importing CommonJS modules
    "skipLibCheck": true,                  // Skip checking library files for faster compilation
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,             // Allows importing JSON files as modules
    "noImplicitAny": true,                 // Disallows 'any' type by default
    "noUnusedLocals": false,                // Disallows unused local variables
    "noUnusedParameters": false,            // Disallows unused function parameters
    "noImplicitThis": true,                // Disallows using 'this' in ways that would be unsafe
    "allowJs": true,                       // Allows JavaScript files (optional)
    "skipDefaultLibCheck": true,           // Skips checking default lib files (optional)
    "outDir": "./dist",                    // Output directory for compiled files (optional)
    "baseUrl": ".",                        // Base directory for non-relative imports (optional)
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/**/*",                            // Include all files inside the 'src' folder
    "public/**/*"                          // Include all files inside the 'public' folder (optional)
  ],
  "exclude": [
    "node_modules",                        // Exclude node_modules folder
    "build",                               // Exclude build folder (optional)
    "dist"                                 // Exclude dist folder (optional)
  ]
}
